<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ page import="java.sql.*" %>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Danh sách Sinh viên</title>
</head>
<body>
    <h2>Danh sách Sinh viên trong Database</h2>
    <table border="1" cellspacing="0" cellpadding="5">
        <tr>
            <th>ID</th>
            <th>Mã SV</th>
            <th>Tên Sinh Viên</th>
            <th>Lớp</th>
        </tr>
        <%
            String url = "jdbc:mysql://localhost:3306/QuanLySinhVien?useUnicode=true&characterEncoding=UTF-8";
            String user = "root";
            String pass = ""; // Mặc định XAMPP để trống

            Connection conn = null;
            Statement stmt = null;
            ResultSet rs = null;

            try {
                Class.forName("com.mysql.cj.jdbc.Driver");
                conn = DriverManager.getConnection(url, user, pass);
                stmt = conn.createStatement();
                rs = stmt.executeQuery("SELECT * FROM sinhvien");

                while (rs.next()) {
        %>
        <tr>
            <td><%= rs.getInt("id") %></td>
            <td><%= rs.getString("maSV") %></td>
            <td><%= rs.getString("tenSV") %></td>
            <td><%= rs.getString("lop") %></td>
        </tr>
        <%
                }
            } catch (Exception e) {
                out.println("Lỗi kết nối: " + e.getMessage());
            } finally {
                if (rs != null) rs.close();
                if (stmt != null) stmt.close();
                if (conn != null) conn.close();
            }
        %>
    </table>
</body>
</html>
