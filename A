<%
    String maSo = request.getParameter("maSo");
    String matKhau = request.getParameter("matKhau");
    String btn = request.getParameter("login");

    if (btn != null) {
        if (maSo == null || maSo.trim().isEmpty() || matKhau == null || matKhau.trim().isEmpty()) {
            out.println("<script>alert('Vui lòng nhập vào mã số cán bộ và mật khẩu.');</script>");
        } else {
            Class.forName("com.mysql.cj.jdbc.Driver");
            Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/qlcanbo", "root", "");
            Statement stmt = conn.createStatement();
            
            String sql = "SELECT * FROM canbo WHERE macanbo = '" + maSo + "' AND matkhau = '" + matKhau + "'";
            ResultSet rs = stmt.executeQuery(sql);
            
            if (rs.next()) {
                out.println("<script>");
                out.println("alert('Đăng nhập thành công!');");
                out.println("window.location.href='edit_profile.jsp?id=" + maSo + "';");
                out.println("</script>");
            } else {
                out.println("<script>alert('Mã số cán bộ hoặc mật khẩu không chính xác.');</script>");
            }
            
            rs.close();
            stmt.close();
            conn.close();
        }
    }
%>

    <form method="POST">
        <table>
            <tr><th colspan="2">ĐĂNG NHẬP</th></tr>
            <tr>
                <td>Mã số cán bộ:</td>
                <td><input type="text" name="maSo" value="4300S382"></td>
            </tr>
            <tr>
                <td>Mật khẩu:</td>
                <td><input type="password" name="matKhau"></td>
            </tr>
            <tr>
                <td colspan="2" class="footer">
                    <input type="submit" name="login" value="Đăng nhập">
                </td>
            </tr>
        </table>
    </form>
